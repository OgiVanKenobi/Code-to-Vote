<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Problem1Naslov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:text="Nisam u mogućnosti da glasam u mestu u kome trenutno živim"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/P1TextView0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:text="Rešenje: Da li znaš da postoji mogućnost da glasaš van mesta svog prebivališta?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/secondaryOrange"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"/>

    <TextView
        android:id="@+id/P1TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:text="      Pravo na to ti pruža Zakon o jedinstvenom biračkom spisku, na osnovu člana 15 koji ti daje mogućnost da od dana posle raspisivanja izbora, najkasnije do 5 dana pre zaključenja biračkog spiska(birački spisak se zaključuje 15 dana pre održavanja izbora), nadležnoj opštinskoj, odnosno gradskoj upravi podneseš zahtev da glasaš u opštini svog mesta boravišta. Prilikom podnošenja zahteva neophodno je da sa sobom poneseš ličnu kartu i da popuniš zahtev za glasanje prema mestu boravišta, koji ti službenici daju.\nIsto važi i za osobe čije je mesto boravišta u inostranstvu. Prema članu 16 ovog zakona koji kaže da osobe sa boravištem u inostranstvu mogu preko diplomatsko-konzularnog predstavništva Republike Srbije, podneti zahtev da se u birački spisak upiše podatak da će na izborima glasati u inostranstvu. Period u kom se može podneti zahtev jeste od dana nakon raspisivanja izbora do najkasnije 5 dana pre dana zaključenja biračkog spiska(birački spisak se zaključuje 15 dana pre održavanja izbora).\n"
        android:textColor="#000000"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/P1TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:gravity="center_vertical"
        android:text="Pročitaj sam: "
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/P1TextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:drawableLeft="@drawable/file"
        android:gravity="center_vertical"
        android:text="Zakon o Jedinstvenom biračkom spisku, članovi 15 i 16:  \n"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="16sp" />






</LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>